@model GameSchool.Models.LogOnModel

@{
    ViewBag.Title = "Innskráning";
}


<h2>Innskráning</h2>
<p>
    Vinsamlegast sláðu inn notandanafn þitt og lykilorð.
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "Innskráning tókst ekki. Vinsamlegast leiðréttið mistökin og reynið aftur.")

@using (Html.BeginForm()) {
    <div>
        <fieldset>
            <legend>Notenda Upplýsingar</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <div class="editor-label">
                <div id="RememberMe">
                    @Html.CheckBoxFor(m => m.RememberMe)
                </div>
                @Html.LabelFor(m => m.RememberMe)
            </div>

            <p>
                <input id="LogOn" type="submit" value="Innskrá" />
            </p>
        </fieldset>
    </div>
}
