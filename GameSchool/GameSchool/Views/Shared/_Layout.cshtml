<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<body>
    <section id="user">
        <h3>Tómas Magnússon</h3>
        <p>The Impaler</p>
        <p>125 xp</p>
        <p>(Achievements)</p>
        <progress max="100" value="60">
            <strong>Progress: 60% done.</strong>
        </progress>
    </section>
    <div class="page">
        <header>
            <div id="title">
                <h1>GameSchool</h1>
                <p id="slogan">Death is the solution to all problems</p>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Heim", "Index", "Home")</li>
                    <li>@Html.ActionLink("Um okkur", "About", "Home")</li>
                    <li>@Html.ActionLink("Glósur", "Glosur", "Home")</li>
                    <li>@Html.ActionLink("Fyrirlestrar", "Fyrirlestrar", "Home")</li>
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
    <div id="accordion">
        <h3><a href="#">First header</a></h3>
        <div>First content</div>
        <h3><a href="#">Second header</a></h3>
        <div>Second content</div>
    </div>
    <script type="text/javascript">
        jQuery(document).ready(function () {
            $('.accordion .head').click(function () {
                $(this).next().toggle('slow');
                return false;
            }).next().hide();
        });
    </script>
</body>
</html>
