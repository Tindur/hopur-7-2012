@model GameSchool.Models.dbLINQ.LectureModel

<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend class="Form">Notaðu formið að neðan til að búa til nýjan fyrirlestur</legend>

        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.LevelID)
        @Html.HiddenFor(model => model.CourseID)

        <div class="editor-label">
            @Html.Label("Nafn")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.Label("Lýsing")
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.Label("Hlekkur")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Source)
            @Html.ValidationMessageFor(model => model.Source)
        </div>

        <div class="editor-label">
            @Html.Label("Fjöldi stiga")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Points)
            @Html.ValidationMessageFor(model => model.Points)
        </div>

        <p>
            <input class="SaveChanges" type="submit" value="Vista" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Til baka", "GetCourse", new { id = Model.CourseID })
</div>
