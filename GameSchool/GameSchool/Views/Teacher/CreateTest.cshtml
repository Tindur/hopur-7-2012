@model GameSchool.Models.ViewModels.TeacherViewModels.CreateTestViewModel
           
<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="offset3">
    @using (Html.BeginForm()) {
        @Html.ValidationSummary(true)
        <fieldset id="TeacherTest">
            <legend>Notaðu formið að neðan til að búa til nýtt próf</legend>

            <div class="editor-label">
                @Html.Label("Nafn")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Test.Name)
                @Html.ValidationMessageFor(model => model.Test.Name)
            </div>

            <div class="editor-label">
                @Html.Label("Lýsing")
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.Test.Description)
                @Html.ValidationMessageFor(model => model.Test.Description)
            </div>
            <div class="editor-label">
                @Html.HiddenFor(model => model.Test.LevelID)
            </div>
            <div class="editor-field">
                @Html.HiddenFor(model => model.Test.LevelID)
            </div>
            <p>
                <input class="SaveChanges" type="submit" value="Vista" />
            </p>
        </fieldset>
    }
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
