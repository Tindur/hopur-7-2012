@model GameSchool.Models.dbLINQ.AssignmentModel

<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("GetAssignment", "Student", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@Model.Name</legend>

        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.LevelID)
        @Html.HiddenFor(model => model.Points)
        @Html.HiddenFor(model => model.CourseID)

        <p>@Model.Description</p>

        <!--<input type="file" name="file" id="file" />-->
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Til baka", "StudentIndex")
</div>
