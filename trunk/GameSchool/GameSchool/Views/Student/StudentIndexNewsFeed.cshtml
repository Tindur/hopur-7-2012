@model GameSchool.Models.ViewModels.StudentIndexViewModel

<h3>Forsíða</h3>
<p>Death is the solution to all problems.</p>
<br />
         
<ul class="thumbnails">         
    <li class="span3">
        <div id="StudentNewsFeed1">
            <img class="thumbnailImg" src="http://www.quicksilver-boats.com/media/287862/video_icon.png" alt="Fyrirlestrar" />
                <h4 class="HeadingsForNewStuff"><i class="icon-info-sign"></i>Nýjustu fyrirlestrar</h4>

                        @if (Model.Lectures.Count() != 0)
                        {
                            <ul class="NewStuffForStudents">
                                @foreach (var lectures in Model.Lectures)
                                    {
                                      
                                        <li class="ListOfNewThings">@lectures.Name</li>
                                    }
                            </ul>
                        }
                        else
                        {
                            <p>Engir nýjir fyrirlestrar</p>
                        }
        </div>
    </li>

    <li class="span3">
        <div id="StudentNewsFeed2">
             <img class="thumbnailImg" src="../../Content/Images/clip01-20110830214436-00018.png" alt="Próf" />
                <h4 class="HeadingsForNewStuff"><i class="icon-info-sign"></i>Nýjustu verkefni</h4>

                @if(Model.Assignments.Count() != 0)
                {
                    <ul class="NewStuffForStudents">
                        @foreach (var assignments in Model.Assignments)
                        {
                            <li class="ListOfNewThings">@assignments.Name</li>
                        }
                    </ul>
                }
                else
                {
                    <p>Engin ný verkefni</p>
                }
        </div>
    </li>

    <li class="span3">
        <div id="StudentNewsFeed3">
           
            <img class="thumbnailImg" src="../../Content/Images/doc_icon_black.png" alt="Verkefni" />
                <h4 class="HeadingsForNewStuff"><i class="icon-info-sign"></i>Nýjustu Próf</h4>
                @if (Model.Tests.Count() != 0)
                {
                    <ul class="NewStuffForStudents">
                        @foreach (var tests in Model.Tests)
                        {
                            <li class="ListOfNewThings">@tests.Name</li>
                        }
                    </ul>
                }
                else
                {
                    <p>Engin ný próf</p>
                }
        </div>
    </li>

<div id="StudentNewsFeed5">
<h4 class="HeadingsForNewStuff"><i class="icon-info-sign"></i>Nýjustu tilkynningar</h4>

@if (Model.Notifications != null)
{
    foreach (var notification in Model.Notifications)
    {
		 <li class ="comments" id="comment_${ID}">
            <div class="commentBody">
                <!--<a href="http://www.pen.is"><img src='@Model.SourceTeacherImage' alt="Notandi" </a>-->
		        <a href="http://www.pen.is">@notification.UserName</a>
		        <span>@notification.Text</span>
		        <div>
			        <abbr>@notification.DateAdded</abbr>
		        </div>
	        </div>
        </li>
    }
}
else
{
    <p>Engar nýjar tilkynningar</p>
}
</div>
        @Html.Action("XPList", "Student")
</ul>
