<body>
    <!-- TODO: Add padding to Body-->
         <div class="navbar navbar-fixed-top">
          <div class="navbar-inner">
            <div class="container">
              <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </a>
              <a class="brand" href="@Url.Action("Index", "Home")">GameSchool</a>
              <div class="nav-collapse">
                <ul class="nav">
                  <li class="active">@Html.ActionLink("Heim", "Index", "Home")</li>
                  <li>@Html.ActionLink("Um síðuna", "About", "Home")</li>
                  <li>@Html.ActionLink("Hafa samband", "Contact", "Home")</li>
                  <!--<div class="pull-right">-->
                  <!--</div>-->
                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    @Html.Partial("_LogOnPartial")
                }
              </div><!--/.nav-collapse -->
            </div>
          </div>
        </div>

        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span2">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="well sidebar-nav">
                        <ul class="nav nav-list">
                            @if (User.IsInRole("Student"))
                            {  
                                @Html.Action("Navigation", "Student")
                            }
                            @if (User.IsInRole("Admin"))
                            {
                                    <li>@Html.ActionLink("Nemendur", "GetStudents", "Admin")</li>
                                    <li>@Html.ActionLink("Kennarar", "GetTeachers", "Admin")</li>
                                    <li>@Html.ActionLink("Áfangar", "GetCourses", "Admin")</li>
                                    <li>@Html.ActionLink("Nýr notandi", "CreateUser", "Admin")</li>
                            }
                             @if (User.IsInRole("Teacher"))
                             {
                                 @Html.Action("Navigation", "Teacher")
                             }
                        </ul>
                    </div><!--/.well -->
                }
                 </div><!--/span-->
        <div class="span10 offset2">
             <!--<div id="mainBody" class="offset2 span10">-->
             @RenderBody()
             <!--</div>-->
        </div>
        </div>
        </div>

        
</body>
