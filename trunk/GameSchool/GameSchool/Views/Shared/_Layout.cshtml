<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/BootstrapCSS/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/BootstrapCSS/bootstrap-responsive.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <!-- TODO: Add padding to Body-->
         <div class="navbar navbar-fixed-top">
          <div class="navbar-inner">
            <div class="container">
              <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </a>
              <a class="brand" href="@Url.Action("Index", "Home")">GameSchool</a>
              <div class="nav-collapse">
                <ul class="nav">
                  <li class="active">@Html.ActionLink("Heim", "Index", "Home")</li>
                  <li><a href="#about">About</a></li>
                  <li><a href="#contact">Contact</a></li>
                  <!--<div class="pull-right">-->
                    @Html.Partial("_LogOnPartial")
                  <!--</div>-->
                </ul>
              </div><!--/.nav-collapse -->
            </div>
          </div>
        </div>

        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span2">
                    <div class="well sidebar-nav">
                        <ul class="nav nav-list">
                            @if (User.IsInRole("Student"))
                            {  <li class="nav-header">Your Face!</li>
              
                                <li class="nav-header">Your Courses</li>
                                    @Html.Action("Navigation", "Student")
                                <li class="nav-header">Your Teachers Face!</li>
                            }
                            @if (User.IsInRole("Admin"))
                             {
                                    <li>@Html.ActionLink("Nemendur", "GetStudents", "Admin")</li>
                                    <li>@Html.ActionLink("Kennarar", "GetTeachers", "Admin")</li>
                                    <li>@Html.ActionLink("Áfangar", "GetCourses", "Admin")</li>
                             }
                        </ul>
                    </div><!--/.well -->
                 </div><!--/span-->
        <div class="span10 offset2">
             <!--<div id="mainBody" class="offset2 span10">-->
             @RenderBody()
             <!--</div>-->
        </div>
        </div>
        </div>
   <!-- Scripts -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.js" type="text/javascript"></script>
        <script src="../../Scripts/BootstrapJS/bootstrap.js" type="text/javascript"></script>
        <script src="../../Scripts/BootstrapJS/bootstrap.min.js" type="text/javascript"></script>
</body>
</html>



